<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeathClock.MainPage">

    <StackLayout>
        <Grid RowDefinitions = "2*,400,1*" Padding="20">
            <Grid ColumnDefinitions="1*,6*" >
                <Button Grid.Column="0" Text="Config"/>

            </Grid>
            
            <Grid  Grid.Row="1" RowDefinitions="2*,2*" ColumnDefinitions="2*,1*,2*,2*">
                <Label Grid.Column="0" Grid.Row="0" VerticalOptions="CenterAndExpand" FontSize="Title" Text="time to go" ScaleY="4"/>
                <Label Grid.Column="0" Grid.Row="1" VerticalOptions="CenterAndExpand" FontSize="Title" Text="time left"/>

                <Label Grid.Column="2" Grid.Row="0" VerticalOptions="CenterAndExpand" FontSize="Title" Text="time left"/>
                <Label Grid.Column="2" Grid.Row="1" VerticalOptions="CenterAndExpand" FontSize="Title" Text="time left"/>
            </Grid>




        </Grid>
    </StackLayout>

</ContentPage>

